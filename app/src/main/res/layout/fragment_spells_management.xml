<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/symbaroum_bg"
    tools:context=".Activity.SpellsManagement">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/spellLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/spells_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SpellsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="ABILITIES AND SPELLS"
        android:textSize="18sp"
        app:fontFamily="@font/baskervillebt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SpellsHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Manage your abilities and spellbook."
        app:fontFamily="@font/baskervilleitalicbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpellsTitle" />

    <ListView
        android:id="@+id/spellsListView"
        android:layout_width="146dp"
        android:layout_height="297dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="90dp"
        android:layout_weight="1"
        android:divider="#d2a679"
        android:dividerHeight="2dp"
        android:headerDividersEnabled="false"
        android:scrollbars="vertical"
        app:fontFamily="@font/baskervilleitalicbt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpellsHelp" />

    <ImageView
        android:id="@+id/sheetTabBtn"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/botao_character"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/itemsTabBtn"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/botao_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ListView
        android:id="@+id/spellBookListView"
        android:layout_width="146dp"
        android:layout_height="297dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_weight="1"
        android:divider="#d2a679"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        app:fontFamily="@font/baskervilleitalicbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpellsHelp" />

    <TextView
        android:id="@+id/SpellListHeader"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Spellbook"
        android:textSize="15sp"
        app:fontFamily="@font/baskervillebt"
        app:layout_constraintBottom_toTopOf="@+id/spellBookListView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/SpellBookHeader"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Spell and Ability List"
        android:textSize="15sp"
        app:fontFamily="@font/baskervillebt"
        app:layout_constraintBottom_toTopOf="@+id/spellsListView"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>