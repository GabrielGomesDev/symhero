<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/symbaroum_bg"
    tools:context=".Activity.SpellFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/spellLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/spells_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SpellsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="ABILITIES AND SPELLS"
        android:textSize="18sp"
        app:fontFamily="@font/baskervillebt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spellLogo" />

    <TextView
        android:id="@+id/SpellsHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select your abilities and spells."
        app:fontFamily="@font/baskervilleitalicbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpellsTitle" />

    <ListView
        android:id="@+id/spellsListView"
        android:layout_width="146dp"
        android:layout_height="297dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:divider="#d2a679"
        android:dividerHeight="2dp"
        android:headerDividersEnabled="false"
        android:scrollbars="vertical"
        app:fontFamily="@font/baskervilleitalicbt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpellsHelp" />

    <ImageView
        android:id="@+id/toItemsBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/sword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/spellBookListView"
        android:layout_width="146dp"
        android:layout_height="297dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_weight="1"
        android:divider="#d2a679"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        app:fontFamily="@font/baskervilleitalicbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpellsHelp" />

    <TextView
        android:id="@+id/SpellListHeader"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Spellbook"
        android:textSize="15sp"
        app:fontFamily="@font/baskervillebt"
        app:layout_constraintBottom_toTopOf="@+id/spellBookListView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/SpellBookHeader"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Spell and Ability List"
        android:textSize="15sp"
        app:fontFamily="@font/baskervillebt"
        app:layout_constraintBottom_toTopOf="@+id/spellsListView"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>